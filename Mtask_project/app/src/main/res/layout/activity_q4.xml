<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aniketkumar.netcamp_app.Q4"
    android:background="#e6cdf4">

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textView8"
     >

        <RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="India" />

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Nepal" />

        <RadioButton
            android:id="@+id/radioButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Tibet" />

        <RadioButton
            android:id="@+id/radioButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="China" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"

        android:text="Mount Everest is Located in?"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bqcld"
        android:layout_width="55dp"
        android:layout_height="55dp"

        android:layout_alignParentTop="true"

        android:layout_marginTop="18dp"
        android:background="@drawable/bb"/>

    <Button
        android:id="@+id/nqc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="47dp"
        android:background="@drawable/simple"

        android:text="NEXt"
        android:layout_below="@+id/radioGroup2"
        android:layout_toRightOf="@+id/bqcld"
        android:layout_toEndOf="@+id/bqcld"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp" />
</RelativeLayout>
