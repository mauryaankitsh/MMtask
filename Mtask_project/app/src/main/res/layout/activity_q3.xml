<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aniketkumar.netcamp_app.Q3"
    android:background="#e6cdf4">

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
      >

        <RadioButton
            android:id="@+id/radioButton13"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="altimeter" />

        <RadioButton
            android:id="@+id/radioButton14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="ammeter" />

        <RadioButton
            android:id="@+id/radioButton15"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="audiometer" />

        <RadioButton
            android:id="@+id/radioButton16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="galvanometer" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="The device used for measuring altitudes is?"
        android:textSize="25dp"
        android:layout_below="@+id/bqcld"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bqcld"
        android:layout_width="55dp"
        android:layout_height="55dp"

        android:layout_alignParentTop="true"

        android:layout_marginTop="18dp"
        android:background="@drawable/bb" />

    <Button
        android:id="@+id/nq3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"

        android:text="NEXt"
        android:background="@drawable/simple"
        android:layout_below="@+id/radioGroup2"
        android:layout_toRightOf="@+id/bqcld"
        android:layout_toEndOf="@+id/bqcld"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp" />
</RelativeLayout>
