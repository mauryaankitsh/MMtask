<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aniketkumar.netcamp_app.Q5"
    android:background="#e6cdf4">

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textView8"
      >

        <RadioButton
            android:id="@+id/radioButton17"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mumbai" />

        <RadioButton
            android:id="@+id/radioButton18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="NewDelhi" />

        <RadioButton
            android:id="@+id/radioButton19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Kolkata" />

        <RadioButton
            android:id="@+id/radioButton20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="chennai" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"

        android:text="The Gateway of India is in?"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bqcld"
        android:layout_width="55dp"
        android:layout_height="55dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/bb" />

    <Button
        android:id="@+id/nqcld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="44dp"

        android:text="NEXt"
        android:background="@drawable/simple"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_toRightOf="@+id/bqcld"
        android:layout_toEndOf="@+id/bqcld" />
</RelativeLayout>
